{
  "expo": {
    "name": "Omakase",
    "slug": "omakase",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "omakase",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.omakase.app",
      "infoPlist": {
        "NSCameraUsageDescription": "需要相機權限來拍攝菜單照片",
        "NSPhotoLibraryUsageDescription": "需要相簿權限來選取菜單照片"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "需要相簿權限來選取菜單照片",
          "cameraPermission": "需要相機權限來拍攝菜單照片"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "需要相機權限來拍攝菜單照片"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
